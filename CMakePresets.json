    {
      "name": "x86_64-intel_pc-windows-msvc-release",
      "displayName": "Windows Intel PC x86_64 MSVC Release",
      "description": "Windows Intel PC x86_64 MSVC Release",
      "inherits": "x86_64-intel_pc-windows-msvc-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ],
