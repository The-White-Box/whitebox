// Half-Life 2 launcher version configuration.

#ifndef APPS_HALF_LIFE_2_APP_VERSION_CONFIG_H_
#define APPS_HALF_LIFE_2_APP_VERSION_CONFIG_H_

#include "product_version_config.h"

// Half-Life 2 long product name.
#define HALF_LIFE_2_VER_PRODUCT_NAME_STR "@PROJECT_NAME@"

// Half-Life 2 file version header.
#define HALF_LIFE_2_VER_FILE_VERSION_HEADER WB_VER_PRODUCT_VERSION_HEADER
// Half-Life 2 file version info.
#define HALF_LIFE_2_VER_FILE_VERSION_INFO WB_VER_PRODUCT_VERSION_INFO
// Half-Life 2 file version as string.
#define HALF_LIFE_2_VER_FILE_VERSION_INFO_STR \
  WB_STRINGIFY(HALF_LIFE_2_VER_FILE_VERSION_INFO)
// Half-Life 2 file description.
#define HALF_LIFE_2_VER_FILE_DESCRIPTION_STR "@PROJECT_DESCRIPTION@"

#ifdef _WIN32
// Half-Life 2 file internal name.  Should be the original filename, without
// extension.
#define HALF_LIFE_2_VER_INTERNAL_NAME_STR "@WB_HALF_LIFE2_TARGET_NAME@"
// Half-Life 2 file original name.  This information enables an application to
// determine whether a file has been renamed by a user.
#define HALF_LIFE_2_VER_ORIGINAL_NAME_STR \
  HALF_LIFE_2_VER_INTERNAL_NAME_STR ".exe"
#endif  // WB_OS_WIN

#endif  // !APPS_HALF_LIFE_2_APP_VERSION_CONFIG_H_
